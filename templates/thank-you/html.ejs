<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
 <head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <title>Roots of Knowledge</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body>
  <table align="center" cellpadding="0" cellspacing="0" width="600">
   <tr>
     <td align="center" style="padding: 40px 0 30px 0;">
      <img src="images/rok-logo.png" alt="Creating Email Magic" width="115" height="auto" style="display: block;" />
     </td>
   </tr>
   <tr>
     <td align="center" style="font-size: 22px">
      Thank you.
     </td>
   </tr>
   <tr>
     <td>&nbsp;</td>
   </tr>
   <tr>
     <td align="center" style="color: #8e8c8c">
      Your donation will help inspire others
     </td>
   </tr>
   <tr>
     <td align="center" style="color: #8e8c8c">
      with a masterpiece of epic size.
     </td>
   </tr>
   <tr>
     <td>&nbsp;</td>
   </tr>
   <tr>
     <td>&nbsp;</td>
   </tr>
   <tr>
     <td style="padding-left: 20%;">
      Donor: <%= name %>
     </td>
   </tr>
   <tr>
     <td>
      &nbsp;
     </td>
   </tr>
   <tr>
     <td style="padding-left: 20%;">
       <table width="80%">
       <% for(var i=0; i < glass.length; i++) {%>
         <tr>
          <td>Panel: <%= glass[i].panel %></td>
          <td>$<%= glass[i].amount %></td>
         </tr>
         <tr>
          <td>Glass: <%= glass[i].piece %></td>
         </tr>
       <% } %>
       <tr>
         <td>Total</td>
         <td>$<%= total %></td>
       </tr>
       <tr>
         <td>&nbsp;</td>
       </tr>
       <tr>
         <td>Cardholder Name: <%= name %></td>
       </tr>
       <tr>
         <td>Credit Card ending in <%= cardEnding %>, exp <%= expDate %></td>
       </tr>
       <tr>
         <td>&nbsp;</td>
       </tr>
     </table>
     </td>
   </tr>
   <tr>
     <td>
       <table width="100%">
         <tr>
           <td style="padding-left: 15%; color: #8e8c8c" >
            Share Roots of Knowledge FB
           </td>
           <td>
             <a href="https://www.facebook.com/rootsofknowledge">
               <img style="width: 75px;" src="./images/facebook.png"/>
             </a>
           </td>
         </tr>
       </table>
     </td>
   </tr>
 </table>
</body>
</html>
